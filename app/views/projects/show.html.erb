<h1 class = "page-header"><%= "Tasks for " + @project.name %>
  <a class= 'btn btn-danger pull-right' <%= link_to 'Delete', project_path(@project), method: :delete, data: { confirm: 'Are you sure?' } %>    
  <a class= 'btn btn-info pull-right' <%= link_to 'Edit', edit_project_path(@project)%>


</h1>
<ol class= 'breadcrumb'>
  <li><a href= '/projects'>Projects</a></li>
  <li class='active'><%=@project.name%></li>
</ol>

<table class = "table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Completed</th>
      <th>Due Date</th>
      <th> <%= link_to "Add Task", new_project_task_path(@project), class: "btn btn-primary pull-right" %></th>
    </tr>
  </thead>

  <tbody>

    <% @tasks.each do |task| %>
    <tr>

      <td ><%= link_to task.description, project_task_path(@project, task)%></td>
      <td> <%= task.task_completed %></td>
      <td ><%= task.due_date%></td>

      <td class= "text-right">
        <a class= 'btn btn-info' <%= link_to 'Edit', edit_project_task_path(@project, task) %>
          <a class= 'btn btn-danger' <%= link_to 'Delete', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
