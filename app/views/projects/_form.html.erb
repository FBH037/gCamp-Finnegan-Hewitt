<%= form_for @project, html:{class: "form-horizontal"} do |f| %>
  <%= render partial: "shared/errors", locals: {object: @project} %>


  <div class= "col-md-12">
  </div>

  <form class="form-horizontal">
    <div class= "form-group">
      <%= f.label :name, class: "control-label col-md-2" %>
      <div class= "form-controls col-md-4">
        <%= f.text_field :name, class: "form-control col-md-4" %>
      </div>
    </div>



    <div class="form-group">
      <div class = "col-md-offset-2 col-md-4">
        <% if path = @project.new_record? %>
        <%= f.submit "Create project", class: "btn btn-primary"  %>
        <% else %>
        <%= f.submit "Update project", class: "btn btn-primary"  %>
        <a class= 'btn btn-danger' <%= link_to 'Delete', project_path(@project), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
          <%= link_to "Cancel", "/projects", class: "btn btn-default" %>
        </div>
      </div>
    </form>
    <% end %>
