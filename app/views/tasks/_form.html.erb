<%= form_for @task, html:{class: "form-horizontal"} do |f| %>
<%= render partial: "shared/errors", locals: {object: @task} %>

    <div class= "form-group">
      <%= f.label :description, class: "control-label col-md-2" %>
      <div class= "form-controls col-md-4">
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :due_date, class: "control-label col-md-2" %>
      <%= f.date_select :due_date %>
    </div>
    <div class="form-group">
      <%= f.label :task_completed, class: "control-label col-md-2" %>
      <%= f.check_box :task_completed %>
    </div>

    <div class="form-group">
      <div class = "col-md-offset-2 col-md-4">
        <% if path = @task.new_record? %>
        <%= f.submit "Create Task", class: "btn btn-primary"  %>
        <% else %>
        <%= f.submit "Update Task", class: "btn btn-primary"  %>
        <% end %>
        <%= link_to "Cancel", "/tasks", class: "btn btn-default" %>
      </div>
    </div>
<% end %>
