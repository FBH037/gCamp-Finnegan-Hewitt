<%= form_for @user, html:{class: "form-horizontal"} do |f| %>

<%= render partial: "shared/errors", locals: {object: @user} %>

<form class="form-horizontal">
  <div class= "form-group">
    <%= f.label :first_name, class: "control-label col-md-2" %>
    <div class= "form-controls col-md-4">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class= "form-group">
    <%= f.label :last_name, class: "control-label col-md-2" %>
    <div class= "form-controls col-md-4">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>
  <div class= "form-group">
    <%= f.label :email, class: "control-label col-md-2" %>
    <div class= "form-controls col-md-4">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <div class = "col-md-offset-2 col-md-4">
      <% if path = @user.new_record? %>
      <%= f.submit "Create User", class: "btn btn-primary"  %>
      <% else %>
      <%= f.submit "Update User", class: "btn btn-primary"  %>
      <a class= 'btn btn-danger' <%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <%= link_to "Cancel", "/users", class: "btn btn-default" %>
    </div>
  </div>
</form>
<% end %>
